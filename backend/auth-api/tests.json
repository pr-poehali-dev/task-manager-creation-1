{
  "tests": [
    {
      "name": "Options CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    },
    {
      "name": "Login without body",
      "method": "POST",
      "path": "/",
      "body": {"action": "login"},
      "expectedStatus": 400
    },
    {
      "name": "Check me without token",
      "method": "GET",
      "path": "/?action=me",
      "expectedStatus": 401
    }
  ]
}
